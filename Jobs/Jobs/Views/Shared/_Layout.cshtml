<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("موقع توظيف", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("الرئيسية", "Index", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            الوظائف
                        </a>
                        <div class="dropdown-menu">
                            <ul>
                                <li>@Html.ActionLink("تصنيف الوظائف", "Index", "CategoryViewModels")</li>
                                <li>@Html.ActionLink("الوظائف", "Index", "Jobs")</li>
                                <li>@Html.ActionLink("المتقدمين", "GetJobByPublisher", "Home")</li>
                                <li>@Html.ActionLink("طلباتي", "ApplyDetails", "Home")</li>
                            </ul>
                        </div>
                    </li>
                    <li>@Html.ActionLink("الصلاحيات", "Index", "Roles")</li>
                    <li>@Html.ActionLink("حولنا", "About", "Home")</li>
                    <li>@Html.ActionLink("تواصل معنا", "Contact", "Home")</li>
                    <li>
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            <input type="text" name="search" id="search" class="form-control" placeholder="ابحث هنا" />
                            <button class="btn btn-success" type="submit">بحث</button>

                        }

                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height:600px;">
        @RenderBody()
        <hr />

    </div>
    <footer class=" myFooter container-fluid">
        <div class="container fixed-bottom">
            <div class="row">
                <span class="glyphicon glyphicon-file"></span>
                <div class="col-md-4 ">
                    من نحن
                </div>
                <div class="col-md-4">
                    روابط هامة
                    <ul>
                        <li>رابط</li>
                        <li>رابط</li>
                        <li>رابط</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    روابط هامة
                    <ul>
                        <li>رابط</li>
                        <li>رابط</li>
                        <li>رابط</li>
                    </ul>
                </div>
            </div>
            <div style="text-align:center;">
                <p>&copy; @DateTime.Now.Year  </p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/alertify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
